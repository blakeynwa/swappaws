<h2>Confirm Request</h2>

<%= form_for [@event, @request], url: confirmed_confirmation_event_request_path(@request) do |f| %>
  <%= f.hidden_field :approved, :value => "true" %>
  <%= f.submit "Approve" %>
<% end %>

<%= form_for [@event, @request], url: denied_confirmation_event_request_path(@request) do |fr| %>
  <%= fr.hidden_field :approved, :value => "false" %>
  <%= fr.submit "Reject" %>
<% end %>
