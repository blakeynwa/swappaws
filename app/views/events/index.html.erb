<h2>Upcoming Events</h2>

<%= render 'filter' %>

<ul>
<% @events.each do |event| %>
  <% if available?(event) %>
    <li>Location: <%= event.location %></li>
    <li>Start Date: <%= date_time_helper(event.start_date_time) %></li>
    <li>End Date: <%= date_time_helper(event.end_date_time) %></li>
    <li><%= link_to('See more...', event_path(event)) %></li><br>
  <% end %>
<% end %>
</ul>
